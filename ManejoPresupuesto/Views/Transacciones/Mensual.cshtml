@model ReporteMensualViewModel
@{
    ViewData["Title"] = "Transacciones Mensuales";
    int anioAnterior = Model.anio - 1;
    int anioPosterior = Model.anio + 1;
    var resumenMontos = new ResumenMontosViewModel()
    {
        Gastos = Model.Gastos,
        Ingresos = Model.Ingreso,
        Total = Model.Total
    };
}

<partial name="_SubMenu" model="SubMenuTransacciones.Mensual" />

<h4>
    Mostrando transacciones de
    <a asp-route-anio="@anioAnterior" class="btn btn-secondary">
        <i class="bi-chevron-left"></i>
    </a> @Model.anio
    <a asp-route-anio="@anioPosterior" class="btn btn-secondary">
        <i class="bi-chevron-right"></i>
    </a>
</h4>

<partial name="_ResumenMontos" model="@resumenMontos" />


<table class="table" style="background-color: lightblue; font-size: 22px">
    <thead>
        <tr>
            <th>Mes</th>
            <th style="text-align: right">Ingresos</th>
            <th style="text-align: right">Gastos</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var transaccionPorMes in Model.TransaccionesPorMes)
        {
            <tr>
                <td>
                    <a style="text-decoration: none" asp-action="Index" , asp-route-anio="@Model.anio"
                       asp-route-mes="@transaccionPorMes.Mes">
                        @transaccionPorMes.FechaReferencia.ToString("MMMM").ToUpper()
                    </a>

                </td>
                <td class="activo" style="text-align: right">
                    @transaccionPorMes.Ingreso
                </td>
                <td class="pasivo" style="text-align: right">
                    @transaccionPorMes.Gasto
                </td>
            </tr>
        }
    </tbody>
</table>