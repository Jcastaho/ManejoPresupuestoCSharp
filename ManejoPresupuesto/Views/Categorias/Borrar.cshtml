@model Categoria
@{
    ViewData["Title"] = "Editar Categoría";
}

<h3 class="mb-4"><i class="bi bi-trash3 me-3 text-danger"></i>¿Esta seguro que desea borrar la cuenta: @Model.Nombre?</h3>


<form asp-action="BorrarCategoria">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-outline-danger">Borrar</button>
    <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
</form>
