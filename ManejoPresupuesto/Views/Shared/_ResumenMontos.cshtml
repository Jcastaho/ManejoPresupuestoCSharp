@model ResumenMontosViewModel

<div class="balance-cards">
    <div class="balance-card deposito">
        <div class="icon-wrapper">
            <i class="bi bi-arrow-down-circle"></i>
        </div>
        <div class="content">
            <strong>Depósitos</strong>
            <span class="valor">@Model.Ingresos.ToString("N")</span>
        </div>
    </div>

    <div class="balance-card retiro">
        <div class="icon-wrapper">
            <i class="bi bi-arrow-up-circle"></i>
        </div>
        <div class="content">
            <strong>Retiros</strong>
            <span class="valor">@Model.Gastos.ToString("N")</span>
        </div>
    </div>

    <div class="balance-card total">
        <div class="icon-wrapper">
            <i class="bi bi-wallet2"></i>
        </div>
        <div class="content">
            <strong>Total</strong>
            <span class="valor">@Model.Total.ToString("N")</span>
        </div>
    </div>
</div>